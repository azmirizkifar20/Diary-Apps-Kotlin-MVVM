<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="org.d3if4055.diaryjurnal.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_tambahDiaryFragment"
            app:destination="@id/tambahDiaryFragment" />
        <action
            android:id="@+id/action_homeFragment_to_editDiaryFragment"
            app:destination="@id/editDiaryFragment" />
    </fragment>
    <fragment
        android:id="@+id/tambahDiaryFragment"
        android:name="org.d3if4055.diaryjurnal.ui.add.TambahDiaryFragment"
        android:label="fragment_tambah_diary"
        tools:layout="@layout/fragment_tambah_diary" >
        <action
            android:id="@+id/action_tambahDiaryFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/editDiaryFragment"
        android:name="org.d3if4055.diaryjurnal.ui.edit.EditDiaryFragment"
        android:label="EditDiaryFragment" >
        <action
            android:id="@+id/action_editDiaryFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>